#:kivy 1.8.0
#: import Window kivy.core.window.Window


<Main_Footer>:
    orientation:"horizontal"

    canvas:
        Color:
            rgb: 0.128,0.128,0.128
        Rectangle:
            size: self.size
            pos: self.pos

    Label:
        id:Footer_Label
        text: "Status"
        font_size:12


<Main_header>:
    orientation:"horizontal"
    canvas:
        Color:
            rgb: 0.128,0.128,0.128
        Rectangle:
            size: self.size
            pos: self.pos
            
    Label:
        text: "Acces Programme Principal"

    Button:
        id: Quit
        size_hint_x: 0.1
        text: "X"
        on_release: app.stop()



# - PROJECT MANAGEMENT RELATED UI (LEFT PANEL) - #

<Project_Search>:
    
    canvas.before:
        Color:
            rgb: 0.3,0.3,0.3
        Rectangle:
            size: self.size
            pos: self.pos
    
    Image:
        size_hint_x:0.4
        source:"search.png"
    TextInput:
        padding:8
        text:"Search"


<Project_Manager>:
    orientation:"vertical"

    canvas.before:
        Color:
            rgb: 0.2,0.2,0.5
        Rectangle:
            pos:self.pos
            size:self.size

    Project_Search:
        size_hint_x: 1
        size_hint_y: None
        size:1, 33
    
    ScrollView:

        Project_Display:
            padding:8





# - INPUT SCREEN (RIGHT PANEL) - #

# widgets

<Project_name_widget>:
    id: project_name_widget
    text:"Nom/ Eleves/ Chemin d'acces"


<Edit_Screen>:
    BoxLayout:
        orientation:"vertical"
        
        # Ligne 1
        BoxLayout:
            orientation:"horizontal"
            
            Image:
                canvas.before:
                    Color:
                        rgb: 0.5,0.5,0.3
                    Rectangle:
                        pos:self.pos
                        size:self.size
                                
                size_hint_x:None
                size_hint_y:1
                height:20
                source:"Fast_text.png"

            Project_name_widget:


            Button:
                size_hint_x:0.2
                text:"Edit"
        
        # Ligne 2
        Label:
            text:"Note + Comm"

        # Ligne 3
        Label:
            text:"Tag"

        # Ligne 4
        BoxLayout:
            height:30
            size_hint_y:None
            Button:
                size_hint_x:None
                width:dp(40)
                text:"<"

            Label:
                
                text:"Prec/Suiv"

            Button:
                width:dp(40)
                size_hint_x:None
                text:">"


<Main_SM>:

    Edit_Screen:
        size_hint_x:1
        size_hint_y:1


# - MAIN UI DESCRIPTION - #

<Main_body>:
    orientation: "vertical"
  
    Main_header:
        id:header
        size_hint_y:None
        size_hint_x:1
        size:50,50

    BoxLayout:
                
        canvas:
            Color:
                rgb: 0.2,0.2,0.2
            Rectangle:
                pos: self.pos
                size: self.size

        
        Project_Manager:
            pos:self.pos
            size:180,1
            size_hint_x:None
            size_hint_y:1


        Main_SM:
            size:self.size
            
    Main_Footer:
        id: main_footer
        size_hint_x: 1
        size_hint_y: None
        size:30,30


