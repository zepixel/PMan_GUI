#:kivy 1.8.0

<Main_Footer>:
    orientation:"horizontal"

    canvas:
        Color:
            rgb: 0.128,0.128,0.128
        Rectangle:
            size: self.size
            pos: self.pos

    Label:
        id:Footer_Label
        text: "Status"
        font_size:12


<Main_header>:
    orientation:"horizontal"
    canvas:
        Color:
            rgb: 0.128,0.128,0.128
        Rectangle:
            size: self.size
            pos: self.pos
            
    Label:
        text: "Acces Programme Principal"

    Button:
        id: Quit
        size_hint_x: 0.1
        text: "X"
        on_release: app.stop()


<Project_Search>:
    Image:
        size_hint_x:0.4
        source:"search.png"
        allow_stretch: False
    TextInput:
        text:"Search"

<Project_Display>:




    

<Project_Manager>:
    orientation:"vertical"
    padding:6

    canvas.before:
        Color:
            rgb: 0.2,0.2,0.5
        Rectangle:
            pos:self.pos
            size:self.size

    Project_Search:
        size_hint_x: 1
        size_hint_y: None
        size:1, 30
    
    Label:
        text:"projects"


<Main_body>:
    orientation: "vertical"
  
    Main_header:
        id:header
        size_hint_y:None
        size_hint_x:1
        size:50,50

    BoxLayout:
                
        canvas:
            Color:
                rgb: 0.2,0.2,0.2
            Rectangle:
                pos: self.pos
                size: self.size

        Project_Manager:
            pos:self.pos
            size:180,1
            size_hint_x:None
            size_hint_y:1


        Label:
            text:"hello"
            
    Main_Footer:
        id: main_footer
        size_hint_x: 1
        size_hint_y: None
        size:30,30


